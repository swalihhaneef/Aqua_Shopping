<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<%- include('../layouts/userheader.ejs') %>

	<!-- breadcrumb -->
	<div class="container">
		
	</div>
		

	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<% if(user.wishlist.length>0){%>
                                <table class="table-shopping-cart">
                                    <tr class="table_head">
                                        <th class="column-1">name</th>
                                        <th class="column-2">Product</th>
                                        <th class="column-3">Price</th>
                                        <th class="column-4"></th>
                                    </tr>
                                    <% for( let i = 0; i <user.wishlist.length; i++ ) { %>
                                        <tr class="table_row">
                                            <td class="column-1 "><%=user.wishlist[i].product.name%></td>
                                            <td class="column-2">
                                                <div class="how-itemcart1">
                                                    <img src="product-image/<%=user.wishlist[i].product.image[0]%>" alt="IMG">
                                                </div>
                                            </td>
                                            <td class="column-3"><%=user.wishlist[i].product.price%></td>
                                            <td><a href="/delete-wishlist?id=<%= user.wishlist[i].product._id %>">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M19 4h-3.5l-1-1h-5l-1 1H5v2h14M6 19a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V7H6v12Z"/></svg>
                                            </a></td>
                                            <td><button onclick="addToCart('<%= user.wishlist[i].product._id %>')" >
                                                <i class="zmdi zmdi-shopping-cart"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% } %>
                                </table>
                            <% } else { %>
                                <div class=" text-center">
                                    <script>
                                        swal({
                                          title: "Failed" ,  
                                          text: " your whishlist is empty !",
                                          icon: "error",
                                          button:"ok"
                                        })
                                </script>
                                    
                                </div>
                                
                            <% } %>
                            
                           
                           
						</div>
                     
                     

					</div>
                   
				</div>
                
				<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                      <img src="./assets/img/fossil/0215_Spring_IC_Womens_Now_trending.avif" alt="" style="width: 100%; height: 100%;">
                    </div>
                  </div>
                  
			</div>
		</div>
	</form>
    <script>
        function addToCart(id){
            console.log(id);
    
     $.ajax({
        type:'get',
        url:`/addToCart?id=${id}`,
        dataType:'json',
        contentType:'application/json',
        success: function(data) {
            
            swal('success', data.message, "success");
        },
     })
        }
    </script>
