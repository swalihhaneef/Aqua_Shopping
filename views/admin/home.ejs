<%- include('../layouts/header.ejs') %>

            <div class="page-inner">

                <div id="main-wrapper">
                    <!-- row -->
                    <div class="row align-items-center grid-margin">
                        <div class="col-12">
                            <div class="card card-white">
                                <div class="card-body row align-items-center">
                                    <div class="col-12 col-md-5 mb-4 mb-md-0">
                                        <h4 class="mb-0">Customers</h4>
                                    </div>

                                    <div class="col-12 col-md-7">

                                        <div class="row">

                                           
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->

                    <!-- Row -->
                    <div class="row">
                        <div class="col-12 grid-margin">
                            <div class="card card-white">
                                <div class="card-body">
                                    <table class="table">
                                        <thead class="bg-light">
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Customer</th>
                                                <th scope="col">Contacts</th>
                                                
                                                <th scope="col">Status</th>
                                               
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                             <% if(users.length >0){%>
                                              <% for(let i=0;i<users.length;i++){%>
                                                  
                                            <tr>
                                                <th scope="row"><%= i+1 %></th>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="me-4">
                                                           
                                                        </div>
                                                        <div>
                                                            <h6><%= users[i].name %></h6>
                                                            <span><%= users[i]._id %></span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><%= users[i].mobile %></td>
                                              <td>
                                                <%if(users[i].is_blocked == 0){%>
                        
                                               
                                                  <a class="btn-text text-light text-decoration-none" href="/admin/block_user?id=<%= users[i]._id%>">
                                <span class="badge rounded-pill bg-soft-pink">Block</span></a>
                        
                      <%}else{%>
                      
                     
                                <a class="btn-text text-light text-decoration-none" href="/admin/unblock_user?id=<%= users[i]._id%>">
                            <span class="badge rounded-pill bg-soft-pink">UnBlock</span></a>
                  
                      <%}%>
                    </td>                
                                                <td>
                                                    <a href="/admin/edit-user?id=<%= users[i]._id%>" class="me-3" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                                                        
                                                        <i class="far fa-edit text-primary"></i>
                                                    </a>

                                                    <a href="/admin/delete-user?id=<%= users[i]._id%>" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                        <i class="far fa-trash-alt text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <%}}%>   
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row -->
                </div>
            </div>
<%- include('../layouts/footer.ejs') %>