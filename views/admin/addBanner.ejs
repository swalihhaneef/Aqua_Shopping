<%- include('../layouts/header.ejs') %>
            <!-- PAGE INNER
            ================================================== -->
            <div class="page-inner">

                <!-- PAGE MAIN WRAPPER
                ================================================== -->
                <div id="main-wrapper">
                    <!-- row -->
                    <div class="row g-xl-3">
                        <div class="col-xl-8 grid-margin">
                            <div class="card card-white mb-3">
                                <div class="card-heading clearfix">
                                    <h4 class="card-title">Add Banner</h4>
                                </div>
                                <div class="card-body">

                                    <form class="needs-validation" action="/admin/add_banner" method="post" enctype="multipart/form-data" >
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <label for="validationCustom01">header</label>
                                                <input type="text" class="form-control" name="header" id="bheader" placeholder="Enter the header of the banner" onkeyup="bheaderError()" >
                                                <span id="bheaderError"></span><br>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <label for="validationCustom01">banner text down</label>
                                                <input type="text" class="form-control" name="banner_text_down" id="btextDown" placeholder="Write the banner text down" onkeyup="btextDown()" >
                                                <span id="BtextdownError"></span><br>
                                            </div>                                            
                                        </div>
                                        <div class="card card-white mb-3">
                                          <div class="card-heading clearfix">
                                              <h4 class="card-title">Media</h4>
                                          </div>
                                          <div class="card-body">
                                              <div class="row">
                                                  <div class="col-md-12">
                                                      <div>
                                                        <input type="file" class="form-control-file" name="image" placeholder="Upload the image of the product" onkeyup="bimageError()" multiple>
                                                       <span id="bannerimageError"></span>
                                                      </div>
                                                  </div>
                                              </div>
          
                                          </div>
                                      </div>
                                     <div class="d-flex justify-content-center">
                                      <button type="submit"  class="btn btn-primary mb-2 ">update</button>
                                    <span id="bannersubmitError"></span>
                                    </div>
                                    </form>

                                </div>
                            </div>
                           
                            
                        </div>
                        
                    </div>
                    <!-- end row -->
                </div>

               
            </div>

           

           
            

       
    <%- include('../layouts/footer.ejs') %>