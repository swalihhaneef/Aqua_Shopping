<%- include('../layouts/header.ejs') %>
            <!-- PAGE INNER
            ================================================== -->
            <div class="page-inner">

                <!-- PAGE MAIN WRAPPER
                ================================================== -->
                <div id="main-wrapper">
                    <!-- row -->
                    <div class="row g-3">
                        
                        <div class="col-xl-9">
                            <div class="row gx-3">
                               <%if(product.length >0){ %>
                                <%for(let i=0;i<product.length;i++){ %>
                 
                                <div class="col-md-6 col-xxl-3 grid-margin">
                                    <div class="product-grid h-100">
                                        <div class="product-img">
                                            <a href="#">
                                           
                                                <img src="product-image/<%= product[i].image[0] %>" alt="...">
                                            </a>
                                        </div>
                                        <div class="product-description">
                                            <h3><a href="#" class="right-sidebar-toggle butn-header" data-sidebar-id="main-right-sidebar"><%= product[i].name %></a></h3>
                                            <h4 class="price">
                                                <span class="offer-price">PRICE : â‚¹ <%= product[i].price %></span>
                                                <br>
                                                <span class="offer-price">STOCK : <%= product[i].stock %></span>
                                                <br>
                                                <span >CATEGORY : <%= product[i].category.name%></span>
                                            </h4>
                                        </div>
                                        <div class="product-buttons">
                                            <ul class="ps-0">
                                                <li><a href="/admin/edit_product?id=<%= product[i]._id%>" class="btn-link" title="Edit"><i class="far fa-edit me-1"></i> Edit</a></li>
                                                <li><button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= i %>">
                                                    Delete
                                                  </button></li>
                                                <li><button type="submit" class="btn btn-danger"><a class=" text-light text-decoration-none" href="/admin/flag_product?id=<%= product[i]._id%>">Flag</a></button>            
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <%}}%> 
                                <div class="col-12 mt-4 grid-margin">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination justify-content-center">
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                            </li>
                                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                                            <li class="page-item">
                                                <a class="page-link" href="#">Next</a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->
                </div>
                <%for(let i=0;i<product.length;i++){ %>
                    <div class="modal fade" id="exampleModal<%= i %>" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <h3>Do you really want to delete the <%= product[i].name %>?</h3>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <a class="btn btn-secondary" href="/admin/delete_product?id=<%= product[i]._id%>">Delete</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  <%}%>
                  
                
            </div>
<%- include('../layouts/footer.ejs') %>