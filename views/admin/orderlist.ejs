<%- include('../layouts/header.ejs') %>

            <!-- PAGE INNER
            ================================================== -->
            <div class="page-inner">

                <!-- PAGE MAIN WRAPPER
                ================================================== -->
                <div id="main-wrapper">
                    <!-- row -->
                    <div class="row align-items-center grid-margin">
                        <div class="col-12">
                            <div class="card card-white">
                                <div class="card-body row align-items-center">
                                    <div class="col-12 col-md-4 mb-4 mb-md-0">
                                        <h4 class="mb-0">Orders</h4>
                                    </div>

                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->

                    <!-- row -->
                    <div class="row">
                        <div class="col-lg-12 col-md-12 grid-margin">
                            <div class="card card-white h-100">
                                <div class="card-heading clearfix">
                                    <h4 class="card-title">Order list</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table mb-0">
                                            <thead class="bg-light">
                                                <tr>
                                                    <th>
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                            <label class="custom-control-label" for="customCheck1">&nbsp;</label>
                                                        </div>
                                                    </th>
                                                    <th >Order ID</th>
                                                    <th class="text-center">Billing Name</th>
                                                    <th class="text-center">Date</th>
                                                    <th class="text-center">Total</th>
                                                    <th class="text-center">Payment Method</th>
                                                    <th class="text-center">order status</th>
                                                    <th class="text-center">View Details</th>
                                                    
                                                </tr>
                                            </thead>
                                            <tbody>
                                              <% if (orders.length > 0) { %>
                                                <% orders.forEach(element => { %>
                                                  <% for (let i = 0; i < element.order.length; i++) { %>
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                            <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                                        </div>
                                                    </td>
                                                    <td><a href="#"><%= element.order[i]._id %></a> </td>
                                                    <td class="text-center"><%= element.address.first_name %></td>
                                                    <td class="text-center">
                                                        <%=new Date(element.order[i].date).toLocaleDateString() %>
                                                      
                                                    </td>
                                                    <td class="text-center">
                                                        â‚¹ <%= element.order[i].totalPrice %>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge rounded-pill bg-soft-green">  <%= element.order[i].payment_type%></span>
                                                    </td>
                                                    <td class="text-center">
                                                        <%= element.order[i].status %>
                                                    </td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-primary btn-sm btn-rounded">
                                                          <a class="text-dark text-decoration-none" href="/admin/order-details?id=<%= element._id %>"> View Details</a>
                                                           
                                                        </button>
                                                    </td>
                                                    
                                                </tr>
                                                <% } %>
                                            <% }); %>
                                           <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->
                </div>

            </div>
<%- include('../layouts/footer.ejs') %>